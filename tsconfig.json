{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "jsx": "react-jsx",
  },
  "include": [
    "front-end/src/**/*",  // Frontend files
    "back-end/src/**/*"    // Backend files
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
